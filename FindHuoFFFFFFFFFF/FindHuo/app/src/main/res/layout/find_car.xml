<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#58bbb8">

        <TextView
            android:text="找车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@mipmap/back2"
            android:id="@+id/back" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="姓名："/>

            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_height="30dp"
                android:hint="  姓名："
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:textColor="@color/money"
                android:ems="10"
                android:singleLine="true"
                android:id="@+id/name"
                android:layout_weight="0.51" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="性别："
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:id="@+id/textView15"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:contentDescription="性别"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioMale"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:textColor="@color/fontSize"
                    android:drawableRight="@drawable/checkbox"
                    android:text="男">

                </RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioFemale"
                    android:layout_marginLeft="50dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/fontSize"
                    android:drawableRight="@drawable/checkbox"
                    android:text="女">

                </RadioButton>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="头像："/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/add"
                android:layout_marginLeft="20dp"
                android:id="@+id/img"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="输入起点："/>

            <Spinner
                android:id="@+id/province1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:textColor="@color/money"/>
            <TextView
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="省"/>
            <Spinner
                android:id="@+id/city1"
                android:layout_width="80dp"
                android:layout_height="29dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="市"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/address1"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:hint=" 详细地址"
                android:singleLine="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/money"
                android:layout_weight="0.10"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="输入终点："/>

            <Spinner
                android:id="@+id/province2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:textColor="@color/money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="省"/>
            <Spinner
                android:id="@+id/city2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="市"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/address2"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:textSize="16sp"
                android:hint=" 详细地址"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:layout_marginLeft="30dp"
                android:textColor="@color/money"
                android:layout_weight="0.08"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="预约打车："
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:contentDescription="性别"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioMale2"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox"
                    android:textColor="@color/fontSize"
                    android:textSize="16sp"
                    android:text="是">

                </RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioFemale2"
                    android:layout_marginLeft="50dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:drawableRight="@drawable/checkbox"
                    android:textColor="@color/fontSize"
                    android:text="否">

                </RadioButton>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/fontSize"
                android:textSize="16sp"
                android:text="出发时间："/>
            <Button
                android:id="@+id/pickdate"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/picktime"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>


        </LinearLayout>


    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#58bbb8"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/button"
        android:text="发布打车消息"/>

</LinearLayout>

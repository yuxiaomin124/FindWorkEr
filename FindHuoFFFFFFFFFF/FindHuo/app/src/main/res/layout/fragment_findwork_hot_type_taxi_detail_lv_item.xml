<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_findworke_hot_type_taxi_detail_item_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_pay_selected3x"/>

    <TextView
        android:id="@+id/tv_findworke_hot_type_taxi_detail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorLotteryDetail"
        android:layout_toRightOf="@id/iv_findworke_hot_type_taxi_detail_item_head"
        android:text="."/>

    <TextView
        android:id="@+id/tv_findworke_hot_type_taxi_detail_item_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_findworke_hot_type_taxi_detail_item_name"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorLotteryDetail"
        android:layout_toRightOf="@id/tv_findworke_hot_type_taxi_detail_item_name"
        android:text="."/>

    <TextView
        android:id="@+id/tv_findworke_hot_type_taxi_detail_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorLotteryDetail"
        android:layout_alignLeft="@id/tv_findworke_hot_type_taxi_detail_item_name"
        android:layout_below="@id/tv_findworke_hot_type_taxi_detail_item_addr"
        android:text="发布时间: "
        />

    <TextView
        android:id="@+id/tv_findworke_hot_type_taxi_detail_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tv_findworke_hot_type_taxi_detail_item_addr"
        android:layout_toRightOf="@id/tv_findworke_hot_type_taxi_detail_item_time_tv"
        android:text="."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@id/iv_findworke_hot_type_taxi_detail_item_head"
        android:layout_marginTop="13dp"
        android:background="#e0e0e0"></LinearLayout>
</RelativeLayout>